@{
    Layout = "_LayoutAdmin2";
}


<body>
    <main class="container">
        <div class="m-3 rounded">
            <form class="needs-validation bg-light p-4 rounded" style="max-width: 400px; margin: 0 auto;" novalidate method="post" enctype="multipart/form-data">
                <div class="row justify-content-center mb-3">
                <div class="row justify-content-center mb-3">
                    <div class="col-12">
                        <label name="Name" class="form-label">Nombre del Color</label>
                        <input name="Name" type="text" class="form-control" required>
                        <div class="invalid-feedback">
                            Se requiere un nombre válido.
                        </div>
                    </div>
                </div>

                <button asp-controller="Admin" asp-action="NewColor" class="btn btn-primary btn-lg" type="submit">Agregar Color</button>
            </form>
        </div>
    </main>
</body>

