@model IEnumerable<KarpicentroWeb.Models.User>

@{
    Layout = "_LayoutAdmin2";
}

<body>
    <main class="container">
        <div class="my-3 p-3 bg-light rounded shadow-sm">
            <div class="table-responsive">
                <table class="table-hover table-sm table table-striped">
                    <thead>
                        <tr>
                            <td scope="col">ID</td>
                            <td scope="col">Correo</td>
                            <td scope="col">Nombre</td>
                            <td scope="col">Nivel</td>
                            <td scope="col">Acciones</td>
                        </tr>
                    </thead>
                    @{
                        foreach (var u in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>@u.ID</td>
                                    <td>@u.Email</td>
                                    <td>@u.Name</td>
                                    <td>@u.UserType</td>
                                    <td>
                                        <a href="@Url.Action("UserEdit", "Admin", new { valor = u.ID })" class="btn btn-primary">Editar</a>
                                        <a href="@Url.Action("UserDelete", "Admin", new { valor = u.ID })" class="btn btn-secondary">Eliminar</a>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    }
                </table>
            </div>
        </div>
    </main>
</body>