@model IEnumerable<KarpicentroWeb.Models.Product>

@{
    if (ViewBag.Nivel == "Admin")
    {
        Layout = "_LayoutAdmin2";
    }
}

<body>
    <main class="container">
        <div class="my-3 p-3 bg-light rounded shadow-sm">
            <div class="table-responsive">
                <h1>Productos</h1>
                <table class="table-hover table-sm table table-striped">
                    <thead>
                        <tr>
                            <td scope="col">ID</td>
                            <td scope="col">Nombre</td>
                            <td scope="col">Descripcion</td>
                            <td scope="col">Categoria</td><td scope="col"><a asp-action="NewProduct" asp-controller="Admin" class="btn btn-primary text-white">Nuevo Producto</a></td>
                        </tr>
                    </thead>
                    @{
                        foreach (var u in Model)
                        {
                            <tbody>
                                <tr>
                                    <td>@u.ID</td>
                                    <td>@u.Name</td>
                                    <td>
                                        @{
                                            string description = u.Description.Length > 50 ? u.Description.Substring(0, 50) + "..." : u.Description;
                                            @description
                                        }
                                    </td>
                                    <td>@u.Categories</td>
                                    <td>
                                        <a asp-action="Features" asp-controller="Admin" asp-route-id="@u.ID" asp-route-nombre="@u.Name" asp-route-categorias="@u.Categories" class="btn btn-primary text-white">Agregar Caracteristicas</a>
                                    </td>
                                </tr>
                            </tbody>
                        }
                    }
                </table>
                <a asp-action="NewColor" asp-controller="Admin" class="btn btn-primary text-white">Nuevo Color</a>
                <a asp-action="NewMaterial" asp-controller="Admin" class="btn btn-primary text-white">Nuevo Material</a>
                <a asp-action="NewSupplier" asp-controller="Admin" class="btn btn-primary text-white">Nuevo Material</a>
            </div>
        </div>
    </main>
</body>