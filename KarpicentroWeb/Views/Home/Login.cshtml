@{
    Layout = "_Layout";
}

<head>
    <link rel="stylesheet" href="~/css/body.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@501&family=Big+Shoulders+Text:wght@383&family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href="~/css/register.css" rel="stylesheet" />
    <link href="~/css/signin.css" rel="stylesheet"/>
</head>

<body>
    <section>
        <div class="wrapper container">

            <form asp-action="Login" asp-controller="Home" method="post">
                <h1>
                    Inicio de Sesión
                </h1>
                <div class="Username">
                    <input type="text" name="Email" required>
                    <label>Introduce tu email</label>
                </div>

                <div class="contraseña">
                    <input type="password" name="Password" required> <!-- Cambiado a type="password" -->
                    <label>Introduce tu contraseña</label>
                </div>

                <div class="botton">
                    <button type="submit">Iniciar Sesión</button> <!-- Cambiado a Iniciar Sesión -->
                </div>

                <div class="register">
                    <p>¿No tienes una cuenta?<a asp-action="Register" asp-controller="Home">Registrarse</a></p>
                </div>
            </form>
        </div>
    </section>
</body>