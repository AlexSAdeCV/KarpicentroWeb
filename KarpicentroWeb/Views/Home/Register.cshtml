@{
    Layout = "_Layout";
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@501&family=Big+Shoulders+Text:wght@383&family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@306&display=swap" rel="stylesheet">
    <link href="~/css/register.css" rel="stylesheet"/>
</head>

<body>
    <div class="container containerk">
        <form class="form-horizontal" role="form" method="post">
            <h2>Registrate!!</h2>
            <div class="form-group">
                <label for="firstName" class="col-sm-3 control-label">Nombre </label>
                <div class="col-12">
                    <input name="Name" type="text" id="firstName" placeholder="Full Name" class="form-control" autofocus>

                </div>
            </div>
            <div class="form-group">
                <label for="email" class="col-sm-3 control-label">Email</label>
                <div class="col-12">
                    <input name="Email" type="email" id="email" placeholder="Email" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-3 control-label">Contraseña</label>
                <div class="col-12">
                    <input name="Password" type="password" id="password" placeholder="Password" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <label for="password" class="col-sm-3 control-label">Confirmar Contraseña</label>
                <div class="col-12">
                    <input name="Password2" type="Password" id="password" placeholder="Password" class="form-control">
                </div>
            </div>
            <div class="form-group">
                <div class="col-12 col-sm-offset-3">
                    <button type="submit" class="btn btn-primary btn-block" asp-action="Register" asp-controller="Home">Register</button>
                </div>
            </div>
                <label class="col-12 control-label" style="text-align:center;">@ViewBag.Mensaje</label>
        </form>
    </div>
</body>