@model KarpicentroWeb.Models.Product

@{
    if (ViewBag.Nivel == "Admin")
    {
        Layout = "_LayoutAdmin";
    }
    else if (ViewBag.Nivel == "Cliente")
    {
        Layout = "_LayoutUsers";
    }
}


<body>
    <main>
        <div class="d-md-flex flex-md-equal w-100 my-md-3 ps-md-3">
            <div class="me-md-3 pt-3+ px-md-5 text-center text-white overflow-hidden">
                <div class=" shadow-sm mx-auto" style="  background-size: cover; background-position: center;">
                    <div id="demo" class="carousel slide" data-bs-ride="carousel">
                        <div class="carousel-inner" style="border-radius: 25px;">
                            <img class="img-fluid w-100" src="@Model.Image" alt="@Model.Name">
                        </div>

                        <!-- Left and right controls/icons -->
                        <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
                            <span class="carousel-control-prev-icon"></span>
                        </button>
                        <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
                            <span class="carousel-control-next-icon"></span>
                        </button>
                    </div>
                </div>
            </div>
            <form method="post">
                <div class="me-md-3 pt-3 px-3 pt-md-5 overflow-hidden">
                    <div class="mx-auto" style="width: 100%; height: auto;">
                        <h1>@Html.DisplayFor(model => model.Name)</h1>
                        <br>
                        <h5>$@Html.DisplayFor(model => model.SalePrice) MXN</h5>  <p class="" style="color: rgb(9, 10, 10);">En Stock @Html.DisplayFor(model => model.Stock) pzas</p>
                        <h5>Descripción:</h5>
                        <p class="" style="color: rgb(9, 10, 10);">@Html.DisplayFor(model => model.Description)</p>
                        <div class="row g-3">
                            <div class="col-sm-3">
                                <input name="Precio" type="hidden" value="@Html.DisplayFor(model => model.SalePrice)" />
                                <input name="id" type="hidden" value="@Html.DisplayFor(model => model.ID)">
                                <br />
                                <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">Alto</th>
                                                <th scope="col">Ancho</th>
                                                <th scope="col">Largo</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>@Model.Height m</td>
                                                <td>@Model.Width m</td>
                                                <td>@Model.Depth m</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                @{
                                    if (ViewBag.Existencia > 0)
                                    {
                                        <input name="Existencia" type="hidden" value="@Html.DisplayFor(model => model.Stock)">
                                        <input name="IdProduc" type="hidden" value="@ViewBag.ProductoId">
                                        <button class="btn btn-primary text-white" asp-controller="Productos" asp-action="Productos">Confirmar</button>
                                        <p>@ViewBag.Mensaje</p>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>

    <script src="../assets/dist/js/bootstrap.bundle.min.js"></script>
</body>