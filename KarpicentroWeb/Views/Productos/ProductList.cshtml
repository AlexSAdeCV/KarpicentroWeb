@model KarpicentroWeb.Models.ProductViewModel

@{
    if (ViewBag.Nivel == "Admin")
    {
        Layout = "_LayoutAdmin";
    }
    else if (ViewBag.Nivel == "Cliente")
    {
        Layout = "_LayoutUsers";
    }
}

<body>
    <div class="container-fluid pt-5 pb-3">
        <h2 class="section-title position-relative text-uppercase mx-xl-5 mb-4"><span class="bg-secondary pr-3">PRODUCTOS</span></h2>
        <div class="row px-xl-5">
            @{
                foreach (var p in Model.Products)
                {
                    if (ViewBag.Tipo == p.Categories)
                    {
                        foreach (var f in Model.Inter)
                        {
                            if (p.ID == f.idProducts)
                            {
                                <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
                                    <div class="product-item bg-light mb-4">
                                        <div class="product-img position-relative overflow-hidden">
                                            <img class="img-fluid w-100" src="@f.Image" alt="@p.Name">
                                            <div class="product-action">
                                                <input name="Existencia" type="hidden" value="@f.Stock">
                                                <a style="background-color: white;" href="@Url.Action("ProductDetails", "Productos", new { Existencia = f.Stock })"></a>
                                                <a class="btn btn-outline-dark btn-square text-center" href="@Url.Action("ProductDetails", "Productos", new { valor = p.ID })"><i class="fa fa-shopping-cart"></i></a>
                                            </div>
                                            <div class="text-center py-4">
                                                <a class="h6 text-decoration-none text-truncate" href="">@p.Name</a>
                                                <div class="d-flex align-items-center justify-content-center mt-2">
                                                    <h5>$@f.SalePrice</h5>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                break;
                            }
                        }
                    }
                }
            }
        </div>
    </div>
</body>
