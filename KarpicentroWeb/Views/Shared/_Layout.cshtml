<body>
    <header class="header-content">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="header-menu">
                    <div class="logo">
                        <img src="~/Images/Logo.png" alt="Karpicentro">
                    </div>
                    <div class="name">
                        <a asp-action="Index" asp-controller="Home" class="nombre-logo">Karpicentro</a>
                    </div>
                    <div class="text-end" style="margin-left: 390px;">
                        <form class="d-flex" asp-controller="Home" asp-action="Login" method="get">
                            <input class="btn btn-primary" type="submit" name="Login" value="Login" />
                        </form>
                    </div>
                    <div class="text-end" style="margin-left: 5px">
                        <form class="d-flex" asp-controller="Home" asp-action="Register" method="get">
                            <input class="btn btn-success" type="submit" name="Registrate" value="Register" />
                        </form>
                    </div>
                    <div class="text-end" style="margin-left: 5px">
                        <form class="d-flex" asp-controller="Home" asp-action="Presentacion" method="get">
                            <input class="btn btn-success" type="submit"  value="Presentacion"/>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
