<body>
    <header class="header-content">
        <nav class="navbar navbar-expand-lg navbar-light d-flex flex-column flex-md-row justify-content-between">
            <div class="container-fluid">
                <div class="header-menu">
                    <div class="logo">
                        <img src="~/Images/Logo.png" alt="Karpicentro">
                    </div>
                    <div class="name">
                        <a asp-action="Index" asp-controller="Home" class="nombre-logo">Karpicentro</a>
                    </div>
                    <nav>
                        <ul>
                            <li><i class="material-symbols-outlined">chair</i></li>
                            <li><a asp-action="Warehouse" asp-controller="Admin">Almacen</a></li>
                            <li><i class="material-symbols-outlined">box_edit</i></li>
                            <li><a asp-action="Boughts" asp-controller="Admin">Compras</a></li>
                            <li><i class="material-symbols-outlined">paid</i></li>
                            <li><a asp-action="Sales" asp-controller="Admin">Ventas</a></li>
                            <li><i class="material-symbols-outlined">recent_actors</i></li>
                            <li><a asp-action="Users" asp-controller="Admin">Usuarios</a></li>
                            <li><i class="material-symbols-outlined">monitoring</i></li>
                            <li><a asp-action="Charts" asp-controller="Admin">Graficas</a></li>
                            <li class="dropdown">
                                <a href="#" class="d-block link-light text-decoration-none dropdown-toggle" id="dropdownUser1" aria-expanded="false">
                                    <img src="@ViewBag.FotoPerfil" alt="mdo" width="32" height="32" class="rounded-circle">
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="Welcome">@ViewBag.Nombre</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-controller="Admin" asp-action="Welcome">Administracion</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="CerrarSesion"><i class="fa-solid fa-right-to-bracket"></i> Cerrar Sesión</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer>
        <p style="color: white; text-align: center; background-color: #3E5F8A;">&copy; 2023 Karpicentro. Todos los derechos reservados.</p>
    </footer>
