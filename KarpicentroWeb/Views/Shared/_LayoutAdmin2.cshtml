<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Karpicentro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/KarpicentroWeb.styles.css" asp-append-version="true" />
    <link href="~/css/barra.css" rel="stylesheet"/>
    <script src="https://kit.fontawesome.com/7f625253aa.js" crossorigin="anonymous" asp-append-version="true"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/album/">
    <link href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@501&family=Big+Shoulders+Text:wght@383&family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@501&family=Big+Shoulders+Text:wght@383&family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>

<style>
    .iconos {
        font-size: 25px;
    }

    .navitem {
        padding-top: 15px
    }
</style>

<body>
    <header class="navbar navbar-expand-lg navbar-light header-content">
        <div class="header-menu">
            <nav>
                <ul>
                    <li><a class="nav-link px-2 text-white navitem" asp-action="Index" asp-controller="Home">Karpicentro</a></li>
                    <li><i class="material-symbols-outlined iconos navitem">chair</i></li>
                    <li><a class="nav-link px-2 text-white navitem" asp-action="Warehouse" asp-controller="Admin">Almacen</a></li>
                    <li><i class="material-symbols-outlined iconos navitem">box_edit</i></li>
                    <li><a class="nav-link px-2 text-white navitem" asp-action="Boughts" asp-controller="Admin">Compras</a></li>
                    <li><i class="material-symbols-outlined iconos navitem">paid</i></li>
                    <li><a class="nav-link px-2 text-white navitem" asp-action="Sales" asp-controller="Admin">Ventas</a></li>
                    <li><i class="material-symbols-outlined iconos navitem">recent_actors</i></li>
                    <li><a class="nav-link px-2 text-white navitem" asp-action="Users" asp-controller="Admin">Usuarios</a></li>
                    <li class="dropdown navitem">
                        <!-- Agregado el class "dropdown" al <li> del usuario -->
                        <a href="#" class="d-block link-light text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <img src="@ViewBag.FotoPerfil" alt="mdo" width="32" height="32" class="rounded-circle">
                        </a>
                        <ul class="dropdown-menu">
                            <!-- Envolver el dropdown en un <ul> con la clase "dropdown-menu" -->
                            <li><a class="dropdown-item" asp-controller="Usuario" asp-action="Inicio">@ViewBag.Nombre</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-controller="Admin" asp-action="Welcome">Administracion</a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="CerrarSesion"><i class="fa-solid fa-right-to-bracket"></i>  Cerrar Sesión</a></li>
                        </ul>
                    </li>
                </ul>
            </nav>
        </div>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-5">
        <div class="container text-center">
            &copy; 2024 - KarpicentroWeb - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
