<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Karpicentro</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/KarpicentroWeb.styles.css" asp-append-version="true" />
    <link href="~/css/barra.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/7f625253aa.js" crossorigin="anonymous" asp-append-version="true"></script>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="canonical" href="https://getbootstrap.com/docs/5.1/examples/album/">
    <link href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@501&family=Big+Shoulders+Text:wght@383&family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Big+Shoulders+Display:wght@501&family=Big+Shoulders+Text:wght@383&family=Lobster&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
</head>
<style>
    * {
        box-sizing: border-box;
    }

    html {
        scroll-behavior: smooth;
    }

    body {
        font-family: 'Inter', sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f5f5f5;
    }

    .name {
        color: #fff;
        margin-right: auto;
    }

    h1 {
        font-size: 3em;
        font-family: 'Big Shoulders Text', sans-serif;
        font-weight: 400;
    }

    h2 {
        font-size: 2.7em;
        font-family: 'Ropa Sans', sans-serif;
        font-weight: 400;
    }

    .material-symbols-outlined {
        color: white;
        font-size: 24px;
    }

    #hero {
        display: flex;
        align-items: center;
        justify-content: center;
        text-align: center;
        flex-direction: column;
        height: 100vh;
        background-image: linear-gradient( 0deg, rgba(51, 45, 45, 0.2), rgba(80, 75, 75, 0.2) ), url("https://cdn11.bigcommerce.com/s-utk51rmavb/images/stencil/original/carousel/104/new_hero__64098.jpg?c=2");
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        color: #3E5F8A;
    }

        #hero h1 {
            color: #3E5F8A;
            font-size: 5.5em;
        }
</style>
<body>
    <header class="header-content">
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container-fluid">
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo01" aria-controls="navbarTogglerDemo01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="header-menu">
                    <div class="logo">
                        <img src="~/Images/Logo.png" alt="Karpicentro">
                    </div>
                    <div class="name">
                        <a asp-action="Index" asp-controller="Home" class="nombre-logo">Karpicentro</a>
                    </div>
                    <nav>
                        <ul style="margin-left: 590px;">
                            <li><a asp-controller="Productos" asp-action="Cart"><i class="material-symbols-outlined" style="font-size: 35px;">shopping_cart</i></a></li>
                            <li><a asp-controller="Productos" asp-action="Products"><i class="material-symbols-outlined" style="font-size: 35px;">store</i></a></li>
                            <li class="dropdown">
                                <a href="#" class="d-block link-light text-decoration-none dropdown-toggle" id="dropdownUser1" aria-expanded="false">
                                    <img src="@ViewBag.FotoPerfil" alt="mdo" width="32" height="32" class="rounded-circle">
                                </a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="Welcome">@ViewBag.Nombre</a></li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li><a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="CerrarSesion"><i class="fa-solid fa-right-to-bracket"></i> Cerrar Sesión</a></li>
                                </ul>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </nav>
    </header>
    <div class="">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
